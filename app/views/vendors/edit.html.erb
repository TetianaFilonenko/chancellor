<%= simple_form_for(@vendor_entry,
  :html => { :method => :patch },
  :url => vendor_path(@entity.vendor),
  :wrapper => :basic_form) do |form| %>
<header>
  <div class="container">
    <h1>Edit Vendor</h1>
    <nav>
      <input type="submit" value="Save" />
      <%= link_to 'Cancel', entity_path(@vendor.entity) %>
    </nav>
  </div>
</header>
<section class="container">
  <%= render :partial => 'form',
             :locals => {
               :form => form,
               :contacts => @contacts,
               :locations => @locations,
               :model => @vendor_entry } %>
</section>
<% end %>
