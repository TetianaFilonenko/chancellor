<%= simple_form_for(@location_entry,
  :html => { :method => :patch },
  :url => location_path(@location),
  :wrapper => :basic_form) do |form| %>
<header class="thing">
  <div class="container">
    <h1>Edit Location</h1>
    <nav>
      <input type="submit" value="Save" />
      <%= link_to 'Cancel', entity_path(@location.entity) %>
    </nav>
  </div>
</header>
<section class="container">
  <%= render :partial => 'form',
             :locals => { :form => form, :model => @location_entry } %>
</section>
<% end %>
