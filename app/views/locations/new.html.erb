<div class="header segment">
  <div class="container">
    <h1 class="ui header">
      New Location
    </h1>
  </div>
</div>
<div class="main container">
  <%= simple_form_for(@location_entry,
    :as => :location,
    :html => { :class => 'ui form', :method => :post },
    :url => entity_locations_path(@entity),
    :wrapper => :semantic_form) do |form| %>
      <%= render :partial => 'form',
                 :locals => { :form => form, :model => @location_entry } %>

      <input type="submit" class="ui submit button" value="Save" />
      <%= link_to 'Cancel', entity_path(@entity), :class => 'ui basic button' %>
  <% end %>
</div>
