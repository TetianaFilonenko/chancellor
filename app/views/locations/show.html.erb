<% location = @location %>
<header>
  <div class="container">
    <h1><%= location.location_name %></h1>
    <nav>
      <%= link_to 'Edit', edit_location_path(location), :class => 'button' %>
      <%= link_to 'Back', return_url(entity_path(location.entity)) %>
    </nav>
  </div>
</header>
<section class="container">
  <div class="row">
    <label>Name</label>
    <p><%= location.location_name %></p>
  </div>
  <div class="row">
    <label>Street Address</label>
    <p><%= location.street_address %></p>
  </div>
  <div class="row">
    <label>City</label>
    <p><%= location.city %></p>
  </div>
  <div class="row">
    <label>Region</label>
    <p><%= location.region %></p>
  </div>
  <div class="row">
    <label>Region Code</label>
    <p><%= location.region_code %></p>
  </div>
  <div class="row">
    <label>Country</label>
    <p><%= location.country %></p>
  </div>
  <div class="row">
    <label>Active</label>
    <p><%= active_string(location) %></p>
  </div>
  <div class="row">
    <label>UUID</label>
    <p><%= location.uuid %></p>
  </div>
</section>