<%= form.input :reference %>
<%= form.input :default_contact_id,
               :collection => contacts,
               :label_method => 'display_name',
               :value_method => :id,
               :input_html => { :class => 'dropdown' },
               :label => 'Contact' %>
<%= form.input :default_location_id,
               :collection => locations,
               :label_method => 'long_address',
               :value_method => :id,
               :input_html => { :class => 'dropdown' },
               :label => 'Location' %>
<%= form.input :salesperson_id,
               :collection => salespeople,
               :label_method => 'to_s',
               :value_method => :id,
               :input_html => { :class => 'dropdown' },
               :label => 'Salesperson' %>
<%= form.input :is_active,
               :as => :boolean,
               :label => 'Is Active',
