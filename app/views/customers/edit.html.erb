<%= simple_form_for(@customer_entry,
  :html => { :method => :patch },
  :url => customer_path(@entity.customer),
  :wrapper => :basic_form) do |form| %>
<header>
  <div class="container">
    <h1>Edit Customer</h1>
    <nav>
      <input type="submit" value="Save" />
      <%= link_to 'Cancel', entity_path(@customer.entity) %>
    </nav>
  </div>
</header>
<section class="container">
  <%= render :partial => 'form',
             :locals => {
               :form => form,
               :contacts => @contacts,
               :locations => @locations,
               :salespeople => @salespeople,
               :model => @customer_entry } %>
</section>
<% end %>
