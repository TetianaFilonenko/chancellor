<%= simple_form_for(@salesperson_entry,
    :as => :salesperson_entry,
    :html => { :method => :patch },
    :url => salesperson_path(@entity.salesperson),
    :wrapper => :basic_form) do |form| %>
<header>
  <div class="container">
    <h1>Edit Salesperson</h1>
    <nav>
      <input type="submit" value="Save" />
      <%= link_to 'Cancel', entity_path(@entity) %>
    </nav>
  </div>
</header>
<section class="container">
  <%= render :partial => 'form',
             :locals => {
               :form => form,
               :locations => @locations,
               :model => @salesperson_entry } %>
</section>
<% end %>
