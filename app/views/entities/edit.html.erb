<%= simple_form_for(@entity,
  :wrapper => :basic_form) do |form| %>
<header>
  <div class="container">
    <h1>Edit Entity</h1>
    <nav>
      <input type="submit" value="Save" />
      <%= link_to 'Cancel', entity_path(@entity) %>
    </nav>
  </div>
</header>
<section class="container">
  <%= render :partial => 'form',
             :locals => { :form => form, :model => @entity } %>
</section>
<% end %>
