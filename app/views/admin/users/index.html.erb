<div class="grid-1">
  <div class="span-1">
    <h1>Users</h1>

    <table class="flakes-table table-with-link-column">
      <thead>
      <tr>
        <th>Email</th>
        <th>Roles</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% if @users.each do |user| %>
        <tr>
          <td nowrap><%= user.email %></td>
          <td nowrap><%= user.roles.map(&:name).join(', ') %></td>
          <td nowrap>              
            <%= link_to [:edit, :admin, user, :return_url => return_url(request.original_url)],
                        class: 'action button-gray smaller right' do %>
                        Edit
            <% end %>
            <%= link_to [:admin, user, :return_url => return_url(request.original_url)],
                        class: 'action button-gray smaller right' do %>
                        View
            <% end %>
          </td>
        </tr>
      <% end.empty? %>
        <tr>
          <td colspan="2">No users found</td><td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
