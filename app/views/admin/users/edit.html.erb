<div class="header segment">
  <div class="container">
    <h1 class="ui header">
      Edit User
    </h1>
  </div>
</div>
<div class="main container">
  <%= simple_form_for([:admin, @user],
    :html => { :class => 'ui form' },
    :wrapper => :semantic_form) do |f| %>
      <%= render partial: 'form', locals: { form: f, model: @user } %>

      <input type="submit" class="ui submit button" value="Save" />
      <%= link_to 'Cancel', [:admin, :users], :class => 'ui basic button' %>
  <% end %>
</div>
